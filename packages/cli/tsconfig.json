{
  "compilerOptions": {
    "declaration": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022",
    /**
     * HACK
     * https://github.com/rollup/rollup/issues/5199
     */
    // "skipLibCheck": true
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
