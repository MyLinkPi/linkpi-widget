{
  "name": "@mylinkpi/widget-cli",
  "version": "1.0.0-beta.19",
  "description": "A new CLI generated with oclif",
  "author": "1-week",
  "type": "module",
  "bin": {
    "widget-cli": "./bin/run.js"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "pnpm lint",
    "prepack": "oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mylinkpi/widget-core": "workspace:*",
    "@mylinkpi/widget-react": "workspace:*",
    "@oclif/core": "^4.0.6",
    "@oclif/plugin-help": "^6.2.3",
    "@oclif/plugin-plugins": "^5.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "axios": "^1.7.2",
    "echarts": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-external-globals": "^0.10.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "vite": "^5.3.1",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-env-compatible": "^2.0.1"
  },
  "devDependencies": {
    "@oclif/test": "^4.0.4",
    "@types/chai": "^4.3.16",
    "@types/node": "^18.19.34",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "chai": "^4",
    "eslint": "^8.57.0",
    "eslint-config-oclif": "^5.2.0",
    "eslint-config-oclif-typescript": "^3.1.8",
    "eslint-config-prettier": "^9.1.0",
    "oclif": "^4.13.7",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "packages/widget-cli",
  "types": "dist/index.d.ts",
  "oclif": {
    "bin": "widget-cli",
    "dirname": "cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "dev": {
        "description": "start a vite dev server"
      },
      "publish": {
        "description": "build and publish a widget to server"
      }
    }
  }
}
